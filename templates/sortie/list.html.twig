{% extends 'base.html.twig' %}

{%  block body %}
    <p>Date do jour {{ 'now'|date('d/m/Y')}}</p>
    <p>participant : {{ app.user.nom }}</p>
    <Section class="recherche-sorties">
        {{ form_start(rechercheForm) }}
        {{ form_widget(rechercheForm) }}
        <button> Rechercher </button>
        {{ form_end(rechercheForm) }}
    </Section>


    <section class="sorties-list">
           <table>
            <caption> Affichage de toutes les sorties</caption>
            <tr>
                <th scope="col">Nom de la sortie</th>
                <th scope="col">Date de la sortie</th>
                <th scope="col">Clôture</th>
                <th scope="col">inscrits/places</th>
                <th scope="col">Etat</th>
                <th scope="col">Inscrit</th>
                <th scope="col">Organisateur</th>
                <th scope="col">Actions</th>
            </tr>
               {%  for sortie in sorties %}
                   <tr>
                   <td> {{ sortie.nom }}</td>
                   <td> {{ sortie.dateHeureDebut | date('d/m/Y H:i') }}</td>
                   <td> {{ sortie.dateLimiteInscription | date('d/m/Y') }}</td>
                   <td> {{ sortie.nbInscriptionMax }}</td>
                   <td>{{ sortie.etat.libelle }}</td>
                   <td> </td>
                   <td> </td>
                   <td>
                       {%  if(sortie.etat.libelle != "Créée") %}
                       <a href="{{  path('sortie_details', {'id': sortie.id}) }}" title="Afficher une Sortie">Afficher</a></td>
                       {% endif %}
                   </tr>
            {%  endfor %}
        </table>

    </section>
{% endblock %}