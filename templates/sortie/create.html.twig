{%  extends 'base.html.twig' %}

{%  block body %}
    {{  form_start(sortieForm) }}
    <h1 class="text-center my-3"> Créer une sortie</h1>
    <div class="jumbotron">
        <div class="row justify-content-around">
             <div class="col-4">
                 <p><span class="font-weight-bold"> Nom de la sortie : </span> {{ form_widget(sortieForm.nom) }}</p>
             </div>
            <div class="col-4">
                <p><span class="font-weight-bold">Campus :</span></p>
            </div>
             <div class="col-4">
                  <p> <span class="font-weight-bold"> Date et heure de la sortie : </span>  {{ form_widget(sortieForm.dateHeureDebut) }}</p>
             </div>
               <div> <label> Date limite d'inscription : </label>  {{ form_widget(sortieForm.dateLimiteInscription) }}</div>
               <div> <label> Nombre de places : </label>  {{ form_widget(sortieForm.nbInscriptionMax) }}</div>
               <div> <label> Durée : </label> {{ form_widget(sortieForm.duree) }} </div>
               <div><label> Description et infos : </label> {{ form_widget(sortieForm.infosSortie) }}</div>
        </div>
               <div class="row row-cols-2">
           <div class="col">

           </div>
           </div>

    {{ form_end(sortieForm) }}
{%  endblock %}

